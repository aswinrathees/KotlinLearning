<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Samples.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.samples.AppWidgetContainer">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:contentDescription="@string/widget_book"
        android:src="@drawable/ic_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/news_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_book_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/news_sub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        app:layout_constraintTop_toBottomOf="@id/tv_book_title" />

    <TextView
        android:id="@+id/tv_book_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/news_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_book" />

    <ImageView
        android:id="@+id/iv_auto_renew"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/renew_book"
        android:src="@drawable/ic_auto_renew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_description" />

</androidx.constraintlayout.widget.ConstraintLayout>